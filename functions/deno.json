{
  "compilerOptions": {
    "lib": ["deno.window", "deno.unstable"],
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "imports": {
    "@supabase/supabase-js": "jsr:@supabase/supabase-js@^2.47.10",
    "@std/assert": "jsr:@std/assert@^1",
    "@std/async": "jsr:@std/async@^1",
    "@std/bytes": "jsr:@std/bytes@^1",
    "@std/crypto": "jsr:@std/crypto@^1",
    "@std/encoding": "jsr:@std/encoding@^1",
    "@std/http": "jsr:@std/http@^1",
    "@std/streams": "jsr:@std/streams@^1",
    "@std/uuid": "jsr:@std/uuid@^1",
    "@valibot/valibot": "jsr:@valibot/valibot@^1",
    "@opentelemetry/api": "npm:@opentelemetry/api@^1.9",
    "@opentelemetry/sdk-trace-base": "npm:@opentelemetry/sdk-trace-base@^1.28",
    "@opentelemetry/exporter-trace-otlp-http": "npm:@opentelemetry/exporter-trace-otlp-http@^0.56",
    "grammy": "https://deno.land/x/grammy@v1.32.0/mod.ts",
    "zod": "jsr:@std/zod@^3.24",
    "redis": "https://deno.land/x/redis@v0.32.4/mod.ts",
    "hono": "jsr:@hono/hono@^4"
  },
  "tasks": {
    "dev": "deno run --allow-all --watch",
    "test": "deno test --allow-all",
    "check": "deno check **/*.ts",
    "lint": "deno lint",
    "fmt": "deno fmt"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": ["no-unused-vars", "no-explicit-any"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": false,
    "proseWrap": "preserve"
  }
}
